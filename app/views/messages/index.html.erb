<div class="panel panel-default">
    <div class="panel-heading">
    メッセージ一覧
    </div>

    <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %> 
    </div>
</div>

<div class="form-holizontal" role="form">

    <%= form_for(@message) do |f| %>
    <div class="container-fluid">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">名前</div>
                <div class="col-sm-11">
                    <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">内容</div>
                <div class="col-sm-11">
                    <%= f.text_area :body, class: "form-control", placeholder: "メッセージを入力してください" %>
                </div>
            </div>
        </div>
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
    <% end %>
    
</div>