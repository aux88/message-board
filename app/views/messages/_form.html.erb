
<%= form_for(@message, html:{role: "form", class: "form-horizontal"}) do |f| %>
<% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
                <li>
                    <%= full_message %>
                </li>
            <% end %>
        </ul>
    </div> 
<% end %>
<div class="container-fluid">
    <div class="form-group">
        <div class="row">
            <%= f.label :name, "名前", class: "col-sm-1 control-label" %>
            <div class="col-sm-11">
                <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <%= f.label :body, "内容", class: "col-sm-1 control-label" %>
            <div class="col-sm-11">
                <%= f.text_area :body, class: "form-control", placeholder: "メッセージを入力してください" %>
            </div>
        </div>
    </div>
    <%= f.submit class: "btn btn-sm btn-primary" %>
</div>
<% end %>